@using E_Commerce2
@using E_Commerce2.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model DataAccessLayer.ViewModel.ProductVM
 <div class="modal fade bd-example-modal-lg"id="modalAddProduct" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
     <div class="modal-dialog modal-lg">
         @*   <div class="modal fade" >
        <div class="modal-dialog">*@
         <div class="modal-content">
             <div class="modal-header">
                 <h4 class="modal-title">Add Product</h4>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-target=".bd-example-modal-lg">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <form method="post" enctype="multipart/form-data" asp-action="AddProducts" asp-controller="Product" asp-area="Admin" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                 <div class="modal-body">
                     <div class="container-fluid">
                         <div class="row">
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="EnglishName">English Name </label>
                                     <input asp-for="EnglishName" class="form-control" />
                                 </div>
                             </div>

                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">Arabic Name </label>
                                     <input asp-for="ArabicName" class="form-control" />
                                 </div>
                             </div>
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">French Name </label>
                                     <input asp-for="FrenchName" class="form-control" />
                                 </div>
                             </div>

                         </div>
                         <div class="row">
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">Price </label>
                                     <input asp-for="Price" class="form-control" />
                                 </div>
                             </div>
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">Quantity</label>
                                     <input asp-for="Quantity" class="form-control" />
                                 </div>
                             </div>
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">Disaccunt </label>
                                     <input asp-for="Disaccunt" class="form-control" />
                                 </div>
                             </div>

                         </div>

                         <div class="row">
                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label for="">IPAdress</label>
                                     <input asp-for="IPAdress" class="form-control" />
                                 </div>
                             </div>

                             <div class="col-md-4">
                                 <div class="form-group">
                                     <label asp-for="File"></label>
                                     <div class="custom-file">
                                         <input  multiple type="file" name="File" asp-for="File" class="form-control custom-file-input">
                                         <label class="custom-file-label">Choose File...</label>
                                     </div>

                                     <span asp-validation-for="File" class="text-danger"></span>
                                 </div>
                             </div>

                             @*<div class="col-md-4">
                                 <div class="form-group">
                             <label>Category</label>
                              <select class="custom-select" asp-for="@Model.CategoryId" asp-items="@Model.Categories">
                                         <option value="" selected>--اختر--</option>
                                  </select>
                                  <small>   <span asp-validation-for="CategoryId" class="text-danger"></span></small>

                         </div>
                             </div>*@
                         </div>
                     </div>

                 </div>
                 <div class="modal-footer justify-content-between">
                     <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                     <button type="submit" class="btn btn-primary">Save changes</button>
                 </div>
             </form>
         </div>
         <!-- /.modal-content -->
     </div>
<!-- /.modal-dialog -->
</div>
<!-- /.modal -->